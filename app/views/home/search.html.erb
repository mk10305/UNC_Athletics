
<div class="col-md-10">

<% if @players.empty? %>
<h2> No search results </h2>

<% else %>
<h2> Player Search Results: </h2> 

<% @players.each do |player | %>



      <div class="col-xs-6 col-md-3">
      <%= image_tag "unc/#{player.player_pic}" , :alt => "player_pic", :class => "img-thumbnail img-responsive" %>
      <div class="caption">
        <h3><%= link_to player.player_name, player_path(player.id) %> </h3>
        <h5>(<%=player.team.team_name %>)</h5>
      </div>
    </div>
 

<% end %>
<% end %>

</div>
